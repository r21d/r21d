function escapeRegExp(string) {
  return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&'); // $& means the whole matched string
}

function colorizeKeywords(preId) {
    let text = document.getElementById(preId).textContent;
    const keywordEntries = Object.entries(keywordMap);
    keywordEntries.sort((a, b) => b[0].length - a[0].length);
    for (const [keyword, cssClass] of keywordEntries) {
        const escapedKeyword = escapeRegExp(keyword);
        const regex = new RegExp(`\\b(?<!-)(?<!\\w)${escapedKeyword}(?!\\w)\\b`, "gi");
        const replacement = `<span class="${cssClass}">${keyword}</span>`;
        text = text.replace(regex, replacement);
    }
    document.getElementById(preId).innerHTML = text;
}
// Font Size Control
document.getElementById('font-size').addEventListener('input', function() {
  document.body.style.fontSize = this.value + 'px';
});

// Font Family Control
document.getElementById('font-family').addEventListener('change', function() {
  if (this.value === 'OpenDyslexic') {
    document.body.classList.add('opendyslexic');
    document.body.style.fontFamily = "'OpenDyslexic3', sans-serif";
  }
   else if (this.value === 'Times New Roman')
  {
    document.body.classList.remove('opendyslexic');
    document.body.style.fontFamily = "'Times New Roman', serif";
  }

  else {
    document.body.classList.remove('opendyslexic');
    document.body.style.fontFamily = "sans-serif"; // Default to sans-serif
  }
});

// Dark Mode Toggle
document.getElementById('dark-mode-toggle').addEventListener('click', function() {
  document.body.classList.toggle('dark-mode');
});

// Section Visibility Control (Modified for Original Writing)
const sectionToggles = document.querySelectorAll('.section-toggle');
sectionToggles.forEach(toggle => {
  toggle.addEventListener('change', function() {
    const sectionId = this.id.replace('toggle-', '');
    const section = document.getElementById(sectionId);

    if (section) {
      //Normal handling for sections, excluding original which is handled by button
      if(sectionId !== 'original-text-section')
        section.style.display = this.checked ? 'block' : 'none';
    }
  });
});

// Section Width Control
const widthSliders = document.querySelectorAll('.section-width');
widthSliders.forEach(slider => {
  slider.addEventListener('input', function() {
    const sectionId = this.dataset.section;
    const section = document.getElementById(sectionId);
    if (section) {
      section.style.width = this.value + '%';
    }
  });
});

// Master Width Slider
document.getElementById('master-width-slider').addEventListener('input', function() {
    document.getElementById('portrait-wrapper').style.width = this.value + 'px';
    document.getElementById('landscape-wrapper').style.width = this.value + 'px';
});

// Wrapper Width Slider
document.getElementById('wrapper-width-slider').addEventListener('input', function() {
    const wrapperWidth = this.value + '%';
    const wrappers = document.querySelectorAll('.section-content-wrapper');
    wrappers.forEach(wrapper => {
        wrapper.style.width = wrapperWidth;
    });
});

// Portrait/Landscape Toggle (CORRECTED)
const portraitToggles = document.querySelectorAll('.portrait-toggle');
const portraitWrapper = document.getElementById('portrait-wrapper');
const landscapeWrapper = document.getElementById('landscape-wrapper');
const sections = [
    document.getElementById('small-table-section'),
    document.getElementById('original-text-section'), // Include original-text-section
    document.getElementById('flash-text-section'),
    document.getElementById('improved-text-section'),
    document.getElementById('large-table-section')
];

portraitToggles.forEach(toggle => {
    toggle.addEventListener('change', function() {
        let anyPortraitChecked = false;
        portraitToggles.forEach(t => {
            if (t.checked) {
                anyPortraitChecked = true;
            }
        });

        if (anyPortraitChecked) {
            // Portrait mode
            portraitWrapper.style.display = 'block';
            landscapeWrapper.style.display = 'none';
            sections.forEach(section => {
                if (section.parentNode !== portraitWrapper) {
                    portraitWrapper.appendChild(section);
                }
            });
        } else {
            // Landscape mode
            portraitWrapper.style.display = 'none';
            landscapeWrapper.style.display = 'flex';
            sections.forEach(section => {
                if (section.parentNode !== landscapeWrapper) {
                    landscapeWrapper.appendChild(section);
                }
            });
        }
    });
});

// Function to apply colorization
function applyColorization() {
    colorizeKeywords("original-text");
    colorizeKeywords("flash-text");
    colorizeKeywords("improved-text");
}

// --- Color Legend ---
function createColorLegend() {
    const legend = document.getElementById('color-legend');
    const styles = getComputedStyle(document.documentElement); // Get :root variables

    const colorMap = {  //  Map class names to descriptions (and exclude Sumerian)
      "htag-1": "History + Tech",
      "acm-2": "Accessible Communication",
      "gcmd-3": "Game-Centric Mindset",
      "pslv-4": "Problem Solver",
      "adwr-5": "Adaptable Writer",
      "wprsp-6": "Worldly Perspective",
    };


    for (const className in colorMap) {
        if (colorMap.hasOwnProperty(className)) {
            const description = colorMap[className];
            const variableName = `--color-${description.toLowerCase().replace(/ /g, '-')}`; // Create variable name
            const colorValue = styles.getPropertyValue(variableName).trim();

            if (colorValue) { // Make sure the variable exists
              const itemDiv = document.createElement('div');
              const swatchDiv = document.createElement('div');
              swatchDiv.className = 'color-swatch';
              swatchDiv.style.backgroundColor = colorValue;

              const input = document.createElement('input');
              input.type = 'text';
              input.value = colorValue;
              input.readOnly = true; // Make it read-only for now

              itemDiv.appendChild(swatchDiv);
              itemDiv.appendChild(input);
              itemDiv.title = description; // Tooltip
              legend.appendChild(itemDiv);
            }
        }
    }
}
// --- Initial Setup, and NEW BUTTON LOGIC ---
document.addEventListener('DOMContentLoaded', (event) => {
 //ADD NEW CODE BELOW HERE

    // 1.  Get the button and the section:
    const originalTextSection = document.getElementById('original-text-section');
    const toggleButton = document.getElementById('toggle-original-button');

     // 2. Hide section initially
    originalTextSection.style.display = 'none';

    // 3. Add event listener to the button:
    toggleButton.addEventListener('click', function() {
        const password = prompt("He is harder than Deity");
        if (password && password.toLowerCase() === 'sid') {
            originalTextSection.style.display = 'block';
              applyColorization();//re-init
        } else {
            alert("Incorrect password!");
        }
    });
// Call the function after initial load and after any dynamic content changes
applyColorization();
createColorLegend();

}); // DOMContentLoaded end

</script>
